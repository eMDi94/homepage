---
import IndexLayout from '../layouts/IndexLayout.astro';
import Hero from '../components/Hero';
import Projects from '../components/Projects.astro';
import Technologies from '../components/Technologies.astro';
---

<IndexLayout title="Marco Dalai">
  <div class="flex flex-row items-center justify-center pt-20">
    <Hero client:only />
  </div>
  <div id="projects" class="w-full px-2 md:max-w-6xl md:mx-auto">
    <Projects />
  </div>
  <div id="technologies" class="w-full px-2 md:max-w-6xl md:mx-auto">
    <Technologies />
  </div>
</IndexLayout>
